{
  "name": "@chancestrickland/bem-classnames",
  "version": "0.1.1",
  "description": "A simple utility to manage BEM class names in JavaScript",
  "author": "Chance Strickland <hi@chancedigital.io>",
  "license": "MIT",
  "main": "index.js",
  "module": "es/index.js",
  "files": [
    "es",
    "index.js",
    "umd"
  ],
  "scripts": {
    "build": "node build",
    "watch": "watch -p \"src/**/*.js\" -c \"yarn build\"",
    "test": "jest",
    "clean": "rm -rf lib es umd index.js",
    "precommit": "pretty-quick --staged",
    "format": "prettier '**/*.js' --write",
    "lint": "eslint src"
  },
  "keywords": [
    "bem",
    "classname",
    "component",
    "css",
    "react",
    "utility"
  ],
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.7",
    "@babel/runtime": "^7.7.7",
    "@chancedigital/eslint-config": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "babel-eslint": "10.x",
    "chalk": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.2.0",
    "gzip-size": "^5.1.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "pretty-bytes": "^5.3.0",
    "pretty-quick": "^2.0.1",
    "rollup": "^1.27.14",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.3",
    "watch-cli": "^0.2.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chancestrickland/bem-classnames.git"
  },
  "bugs": {
    "url": "https://github.com/chancestrickland/bem-classnames/issues"
  },
  "eslintConfig": {
    "extends": [
      "@chancedigital",
      "@chancedigital/eslint-config/jest",
      "@chancedigital/eslint-config/typescript"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "globals": {},
    "testRegex": ".+\\.test\\.js$"
  },
  "publishConfig": {
    "access": "public"
  }
}
